<!DOCTYPE html>
<html lang="en">

<head>
    <title>SURF Roadmap</title>
    <%- include('partials/head') %>
</head>

<body d-cell="{ sidebarOpen: false }" d-id="body">
    <div class="mobile-overlay" d-attr="class.open: sidebarOpen" d-signal="click: sidebarOpen = false"></div>
    <div class="app-layout" d-id="layout">
        <%- include('partials/header', { breadcrumbs: [{ label: 'Roadmap' }] }) %>
            <%- include('partials/sidebar', { activeCategory: 'roadmap' , activeExample: null }) %>

                <main class="app-main">
                    <div class="section-header">
                        <h2 class="section-title">Project Roadmap</h2>
                        <p class="section-desc">Core framework evolution and mission status.</p>
                    </div>

                    <div class="roadmap-grid">
                        <% sections.forEach(section=> { %>
                            <div class="roadmap-column">
                                <h3 class="column-header">
                                    <%= section.title %>
                                        <span class="count">
                                            <%= section.items.length %>
                                        </span>
                                </h3>
                                <ul class="task-list">
                                    <% section.items.forEach(item=> { %>
                                        <li class="task-item <%= item.done ? 'done' : '' %>">
                                            <div class="status-indicator">
                                                <% if (item.done) { %>
                                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none"
                                                        stroke="currentColor" stroke-width="4">
                                                        <polyline points="20 6 9 17 4 12"></polyline>
                                                    </svg>
                                                    <% } %>
                                            </div>
                                            <span class="task-text">
                                                <%= item.text %>
                                            </span>
                                        </li>
                                        <% }) %>
                                </ul>
                            </div>
                            <% }) %>
                    </div>

                    <div
                        style="margin-top: 4rem; text-align: center; color: var(--text-dim); font-size: 0.85rem; font-weight: 500;">
                        Systematically synchronized with <code>ROADMAP.md</code>
                    </div>
                </main>
    </div>

    <style>
        .roadmap-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 2rem;
            align-items: start;
        }

        .roadmap-column {
            background: var(--glass-bg);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid var(--glass-border);
            border-radius: 32px;
            padding: 2rem;
            height: 100%;
        }

        .column-header {
            font-size: 1.1rem;
            font-weight: 800;
            color: var(--text-main);
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            letter-spacing: -0.02em;
        }

        .column-header .count {
            font-size: 0.75rem;
            font-weight: 800;
            background: rgba(255, 255, 255, 0.08);
            padding: 0.2rem 0.6rem;
            border-radius: 8px;
            color: var(--accent-primary);
        }

        .task-list {
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .task-item {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid transparent;
            border-radius: 16px;
            padding: 1rem;
            display: flex;
            gap: 1rem;
            transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
            align-items: center;
        }

        .task-item:hover {
            background: rgba(255, 255, 255, 0.06);
            transform: translateX(4px);
            border-color: rgba(255, 255, 255, 0.05);
        }

        .task-item.done {
            opacity: 0.4;
        }

        .task-item.done .task-text {
            text-decoration: line-through;
        }

        .status-indicator {
            width: 20px;
            height: 20px;
            border-radius: 6px;
            border: 2px solid var(--glass-border);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            color: var(--accent-primary);
        }

        .task-item.done .status-indicator {
            background: var(--accent-primary);
            border-color: var(--accent-primary);
            color: #0f172a;
            box-shadow: 0 0 10px rgba(56, 189, 248, 0.3);
        }

        .task-text {
            line-height: 1.5;
            font-size: 0.95rem;
            font-weight: 500;
            color: var(--text-main);
        }
    </style>

    <%- include('partials/core-scripts') %>
</body>

</html>