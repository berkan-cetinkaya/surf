<script defer src="/dist/surf.min.js"></script>
<script defer src="/dist/plugins/top-loader.js"></script>
<script>
    function initSurfCore() {
        if (window.Surf && window.SurfTopLoader) {
            Surf.use(SurfTopLoader, {
                color: 'linear-gradient(90deg, #3b82f6, #60a5fa)',
                height: '3px'
            });
        }
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initSurfCore);
    } else {
        initSurfCore();
    }
</script>