<script src="/dist/surf.min.js" defer></script>
<script src="/dist/plugins/top-loader.js" defer></script>
<script src="/dist/plugins/auto-refresh.js" defer></script>
<script src="/dist/plugins/clipboard.js" defer></script>
<script defer>
    function initSurfCore() {
        if (window.Surf) {
            if (window.SurfTopLoader) {
                Surf.use(SurfTopLoader, {
                    color: 'linear-gradient(90deg, #3b82f6, #60a5fa)',
                    height: '3px'
                });
            }
            if (window.SurfAutoRefresh) {
                Surf.use(SurfAutoRefresh, { skipInitial: true });
            }
            if (window.SurfClipboard) {
                Surf.use(SurfClipboard);
            }
        }
    }

    document.addEventListener('DOMContentLoaded', initSurfCore);
</script>