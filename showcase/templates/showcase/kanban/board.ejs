<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Surf Board - Project Management</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

        :root {
            --bg-body: #0f172a;
            --bg-sidebar: rgba(15, 23, 42, 0.95);
            --bg-column: rgba(30, 41, 59, 0.4);
            --bg-card: #1e293b;
            --text-main: #f8fafc;
            --text-muted: #94a3b8;
            --border-subtle: rgba(255, 255, 255, 0.08);
            --brand-primary: #38bdf8;
            --brand-secondary: #818cf8;
            --success: #10b981;
            --danger: #ef4444;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', system-ui, sans-serif;
            background: radial-gradient(circle at top right, #1e1b4b, #0f172a);
            background-attachment: fixed;
            margin: 0;
            overflow: hidden;
        }

        .dashboard-layout {
            display: flex;
            height: 100vh;
            overflow: hidden;
            position: relative;
        }

        /* Ensure sidebar fits in flex layout */
        .dashboard-sidebar {
            flex-shrink: 0;
            width: 260px;
            position: relative !important;
            /* Force overrides */
        }

        .dashboard-main {
            flex: 1;
            min-width: 0;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            position: relative;
        }

        .dashboard-content {
            flex: 1;
            overflow: auto;
            padding: 2rem;
            position: relative;
        }

        /* Mobile Adjustments */
        .mobile-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(4px);
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

        .mobile-overlay.open {
            display: block;
            opacity: 1;
            visibility: visible;
        }

        @media (max-width: 768px) {
            .dashboard-layout {
                grid-template-columns: 1fr !important;
            }

            .dashboard-sidebar {
                position: fixed !important;
                top: 0;
                left: 0;
                bottom: 0;
                width: 280px !important;
                z-index: 1001;
                transform: translateX(-100%);
                transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
                box-shadow: 4px 0 24px rgba(0, 0, 0, 0.5);
                background: var(--bg-sidebar) !important;
                display: flex !important;
            }

            .dashboard-sidebar.open {
                transform: translateX(0);
            }

            .dashboard-content {
                padding: 1rem;
            }
        }
    </style>
</head>

<body d-cell="{ sidebarOpen: false, mobileSearchOpen: false }" d-id="body">
    <div class="mobile-overlay" d-attr="class.open: sidebarOpen" d-signal="click: sidebarOpen = false"></div>
    <div class="dashboard-layout" d-id="kanban-layout">
        <%- include('partials/sidebar.ejs') %>

            <div class="dashboard-main" id="kanban-main">
                <%- include('partials/header.ejs') %>

                    <div class="board-toolbar">
                        <form action="/showcase/kanban" method="GET" d-pulse="commit" d-target="body"
                            class="toolbar-form">
                            <label for="sprint-select" class="toolbar-label">Active Sprint:</label>
                            <select id="sprint-select" name="sprintId" d-signal="change: submit" class="toolbar-select">
                                <option value="" disabled <%=!activeSprintId ? 'selected' : '' %>>Select Sprint</option>
                                <% sprints.forEach(function(sprint) { %>
                                    <option value="<%= sprint.id %>" <%=activeSprintId===sprint.id ? 'selected' : '' %>>
                                        <%= sprint.title %>
                                    </option>
                                    <% }); %>
                            </select>
                        </form>

                        <% if (activeSprintId) { %>
                            <div class="status-badge">
                                <%= sprints.find(s=> s.id === activeSprintId)?.status || 'Active' %>
                            </div>
                            <% } %>
                    </div>

                    <div class="dashboard-content">
                        <%- include('partials/board_main.ejs') %>


                    </div>
            </div>
    </div>
    </div>

    <!-- Global Task Detail Modal -->
    <dialog id="task-detail-modal"
        style="border:none; background:transparent; padding:0; outline:none; backdrop-filter:blur(4px);">
        <!-- Content will be injected here via Surf -->
    </dialog>

    <style>
        .board-container {
            min-width: 100%;
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        /* Toolbar Styles */
        .board-toolbar {
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            gap: 1.5rem;
            background: transparent;
        }

        .toolbar-form {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .toolbar-label {
            font-weight: 600;
            font-size: 0.85rem;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin: 0;
            line-height: 1;
        }

        .toolbar-select {
            background: var(--bg-card);
            border: 1px solid var(--border-subtle);
            color: var(--text-main);
            padding: 0.4rem 0.75rem;
            border-radius: 8px;
            min-width: 180px;
            font-size: 0.9rem;
            font-weight: 500;
            outline: none;
            transition: all 0.2s;
            cursor: pointer;
        }

        .toolbar-select:focus {
            border-color: var(--brand-primary);
            box-shadow: 0 0 0 2px rgba(56, 189, 248, 0.2);
        }

        .status-badge {
            font-size: 0.7rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: var(--brand-secondary);
            background: rgba(129, 140, 248, 0.1);
            padding: 4px 10px;
            border-radius: 20px;
            border: 1px solid rgba(129, 140, 248, 0.2);
        }

        /* Board Specifics */
        .kanban-board {
            display: flex;
            align-items: flex-start;
            gap: 2rem;
            min-height: 500px;
            /* Scrollbar space */
        }

        /* Column Styles */
        .column {
            min-width: 320px;
            width: 320px;
            max-height: 100%;
            display: flex;
            flex-direction: column;
            background: var(--bg-column);
            border: 1px solid var(--border-subtle);
            border-radius: 12px;
            padding: 1rem;
            backdrop-filter: blur(10px);
            transition: border-color 0.2s;
        }

        .column:hover {
            border-color: rgba(255, 255, 255, 0.15);
        }

        .column-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding: 0 0.25rem;
        }

        .header-title {
            font-weight: 600;
            font-size: 0.9rem;
            color: var(--text-main);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .dot-indicator {
            width: 8px;
            height: 8px;
            border-radius: 50%;
        }

        .dot-indicator.todo {
            background: var(--text-muted);
        }

        .dot-indicator.doing {
            background: var(--brand-primary);
            box-shadow: 0 0 8px rgba(56, 189, 248, 0.4);
        }

        .dot-indicator.done {
            background: var(--success);
        }

        .column-count {
            background: rgba(255, 255, 255, 0.05);
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            color: var(--text-muted);
        }

        .task-list {
            flex: 1;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            padding-right: 4px;
            /* Space for scrollbar */
            min-height: 100px;
        }

        /* Scrollbar styling for column */
        .task-list::-webkit-scrollbar {
            width: 4px;
        }

        .task-list::-webkit-scrollbar-track {
            background: transparent;
        }

        .task-list::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
        }

        .add-task-form {
            margin-top: 1rem;
        }

        .ghost-add-btn {
            width: 100%;
            text-align: left;
            background: transparent;
            border: 1px dashed var(--border-subtle);
            color: var(--text-muted);
            padding: 0.75rem;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.2s;
        }

        .ghost-add-btn:hover {
            border-color: var(--text-muted);
            color: var(--text-main);
            background: rgba(255, 255, 255, 0.02);
        }

        .add-input {
            width: 100%;
            padding: 0.75rem;
            background: var(--bg-card);
            border: 1px solid var(--border-focus);
            border-radius: 8px;
            color: var(--text-main);
            outline: none;
            animation: fadeIn 0.1s ease-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(5px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
    <%- include('partials/scripts.ejs') %>
        <style>
            .task-list {
                transition: background-color 0.2s;
                min-height: 100px;
                /* Ensure drop zone exists even if empty */
            }

            .task-list.drag-over {
                background-color: rgba(56, 189, 248, 0.1);
                /* Light blue tint */
                border-radius: 8px;
                outline: 2px dashed var(--brand-primary);
            }
        </style>
</body>

</html>