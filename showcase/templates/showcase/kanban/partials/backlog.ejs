<div id="backlog-section">
    <div class="planning-controls">
        <h2 class="section-title">Planning</h2>

        <form d-pulse="commit" method="POST" action="/showcase/kanban/sprint/create" class="sprint-form"
            onsubmit="setTimeout(()=>this.reset(), 100)">
            <input type="text" name="title" placeholder="Sprint Name..." class="sprint-input" required>
            <button type="submit" class="btn-create-sprint">
                Create Sprint
            </button>
        </form>
    </div>

    <% backlogBuckets.forEach(function(bucket, index) { %>
        <div class="backlog-group">
            <div class="backlog-header">
                <div class="header-main">
                    <div class="title-with-badge">
                        <h3 class="bucket-title">
                            <%= bucket.title %>
                        </h3>
                        <span class="task-count-badge" id="badge-<%= bucket.id %>">
                            <%= bucket.tasks.length %>
                        </span>
                    </div>
                    <div class="bucket-meta">
                        <%= bucket.sprintId ? 'Active Sprint' : 'General Backlog' %>
                    </div>
                </div>

                <div class="header-actions">
                    <% if (bucket.sprintId) { %>
                        <div class="order-actions">
                            <% if (index> 0) { %>
                                <form d-pulse="commit" method="POST" action="/showcase/kanban/sprint/reorder"
                                    class="inline-form">
                                    <input type="hidden" name="sprintId" value="<%= bucket.sprintId %>">
                                    <input type="hidden" name="direction" value="up">
                                    <button type="submit" class="icon-btn" title="Move Up">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none"
                                            stroke="currentColor" stroke-width="2.5">
                                            <path d="M18 15l-6-6-6 6" />
                                        </svg>
                                    </button>
                                </form>
                                <% } %>
                                    <% if (index < backlogBuckets.length - 2) { %>
                                        <form d-pulse="commit" method="POST" action="/showcase/kanban/sprint/reorder"
                                            class="inline-form">
                                            <input type="hidden" name="sprintId" value="<%= bucket.sprintId %>">
                                            <input type="hidden" name="direction" value="down">
                                            <button type="submit" class="icon-btn" title="Move Down">
                                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none"
                                                    stroke="currentColor" stroke-width="2.5">
                                                    <path d="M6 9l6 6 6-6" />
                                                </svg>
                                            </button>
                                        </form>
                                        <% } %>
                        </div>

                        <form d-pulse="commit" method="POST" action="/showcase/kanban/sprint/delete"
                            class="inline-form">
                            <input type="hidden" name="sprintId" value="<%= bucket.sprintId %>">
                            <button type="submit" class="btn-delete-sprint" title="Delete Sprint">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path
                                        d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                </svg>
                            </button>
                        </form>
                        <% } %>
                </div>
            </div>

            <form d-pulse="commit" method="POST" action="/showcase/kanban/add" class="backlog-quick-add"
                onsubmit="setTimeout(()=>this.reset(), 100)">
                <div class="input-group">
                    <% if (bucket.sprintId) { %>
                        <input type="hidden" name="columnId" value="todo">
                        <input type="hidden" name="sprintId" value="<%= bucket.sprintId %>">
                        <input type="hidden" name="view" value="planning">
                        <% } else { %>
                            <input type="hidden" name="columnId" value="backlog">
                            <% } %>
                                <input type="text" name="title" placeholder="Quick add task..." class="quick-add-input"
                                    required>
                                <button type="submit" class="quick-add-btn">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                        stroke-width="2.5">
                                        <line x1="12" y1="5" x2="12" y2="19"></line>
                                        <line x1="5" y1="12" x2="19" y2="12"></line>
                                    </svg>
                                </button>
                </div>
            </form>

            <div class="tasks-area">
                <div class="tasks-list" id="backlog-content-<%= bucket.id %>" d-drop-zone
                    d-drop-url="/showcase/kanban/move"
                    d-drop-data='{"toCol": "<%= bucket.sprintId ? "todo" : "backlog" %>", "toSprintId": "<%= bucket.sprintId %>", "view": "planning"}'>
                    <%- include('backlog_content.ejs', { tasks: bucket.tasks, sprintId: bucket.sprintId }) %>
                </div>
            </div>
        </div>
        <% }); %>
</div>

<style>
    .planning-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2.5rem;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 800;
        background: linear-gradient(135deg, #fff 0%, var(--brand-primary) 100%);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.03em;
    }

    .sprint-form {
        display: flex;
        gap: 0.75rem;
        background: rgba(30, 41, 59, 0.4);
        padding: 0.4rem;
        border-radius: 100px;
        border: 1px solid var(--border-subtle);
        backdrop-filter: blur(10px);
    }

    .sprint-input {
        background: transparent;
        border: none;
        color: #fff;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        width: 180px;
        outline: none;
    }

    .btn-create-sprint {
        background: linear-gradient(135deg, var(--brand-primary), var(--brand-secondary));
        color: #000;
        border: none;
        padding: 0.5rem 1.25rem;
        border-radius: 100px;
        font-weight: 700;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-create-sprint:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 15px rgba(56, 189, 248, 0.4);
    }

    .backlog-group {
        background: rgba(15, 23, 42, 0.4);
        border: 1px solid var(--border-subtle);
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(20px);
        transition: border-color 0.3s ease;
    }

    .backlog-group:hover {
        border-color: rgba(56, 189, 248, 0.2);
    }

    .backlog-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.5rem;
        gap: 1rem;
    }

    .title-with-badge {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.25rem;
    }

    .bucket-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-main);
    }

    .task-count-badge {
        background: rgba(56, 189, 248, 0.1);
        color: var(--brand-primary);
        font-size: 0.75rem;
        font-weight: 700;
        padding: 2px 8px;
        border-radius: 100px;
        border: 1px solid rgba(56, 189, 248, 0.2);
    }

    .bucket-meta {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        font-weight: 600;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .order-actions {
        display: flex;
        gap: 0.25rem;
    }

    .icon-btn {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--border-subtle);
        color: var(--text-muted);
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .icon-btn:hover {
        background: rgba(56, 189, 248, 0.1);
        color: var(--brand-primary);
        border-color: var(--brand-primary);
    }

    .btn-delete-sprint {
        background: rgba(239, 68, 68, 0.05);
        border: 1px solid rgba(239, 68, 68, 0.2);
        color: #ef4444;
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-delete-sprint:hover {
        background: #ef4444;
        color: #fff;
        border-color: #ef4444;
    }

    .backlog-quick-add {
        margin-bottom: 1.5rem;
    }

    .input-group {
        display: flex;
        gap: 0.5rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--border-subtle);
        border-radius: 12px;
        padding: 0.25rem;
        transition: border-color 0.2s;
    }

    .input-group:focus-within {
        border-color: var(--brand-primary);
        background: rgba(255, 255, 255, 0.05);
    }

    .quick-add-input {
        flex: 1;
        background: transparent;
        border: none;
        color: #fff;
        padding: 0.6rem 1rem;
        font-size: 0.95rem;
        outline: none;
    }

    .quick-add-btn {
        background: var(--brand-primary);
        color: #000;
        border: none;
        width: 36px;
        height: 36px;
        border-radius: 10px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s;
    }

    .quick-add-btn:hover {
        transform: scale(1.05);
    }

    .tasks-area {
        margin-top: 1rem;
    }

    .tasks-list {
        min-height: 80px;
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
        border-radius: 12px;
        transition: all 0.2s;
    }

    @media (min-width: 1024px) {
        .tasks-list {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1400px) {
        .tasks-list {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .tasks-list.drag-over {
        background: rgba(56, 189, 248, 0.05);
        outline: 2px dashed var(--brand-primary);
        outline-offset: 4px;
    }

    /* Mobile Responsive Hooks */
    @media (max-width: 600px) {
        .planning-controls {
            flex-direction: column;
            align-items: stretch;
            gap: 1rem;
        }

        .sprint-form {
            width: 100%;
        }

        .sprint-input {
            flex: 1;
        }

        .backlog-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .header-actions {
            width: 100%;
            justify-content: flex-end;
            margin-top: 0.5rem;
        }
    }

    .inline-form {
        margin: 0;
        display: inline-block;
    }
</style>