<header class="dashboard-header">
    <div class="header-left">
        <button id="kanban-sidebar-toggle" class="sidebar-toggle" aria-label="Toggle Menu"
            d-signal="click: sidebarOpen = !sidebarOpen">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                stroke-linecap="round" stroke-linejoin="round">
                <line x1="3" y1="12" x2="21" y2="12"></line>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
        </button>
        <h2 class="breadcrumb">
            <span class="text-muted">Projects /</span>
            <span class="text-main">Surf Board</span>
        </h2>
    </div>

    <div class="header-center">
        <form class="search-bar" action="/showcase/kanban/search" d-pulse="commit" d-target="#search-results">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" id="desktop-search-input" placeholder="Search tasks..." class="search-input"
                d-input="/showcase/kanban/search" d-pulse="commit" d-debounce="300" name="q" d-target="#search-results"
                d-min-length="1" autocomplete="off">
            <div id="search-results"></div>
        </form>
    </div>

    <div class="header-right">
        <button class="mobile-search-toggle" d-signal="click: mobileSearchOpen = !mobileSearchOpen"
            aria-label="Toggle Search">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
        </button>

        <div class="user-profile">
            <img src="https://i.pravatar.cc/150?u=me" alt="My Profile" class="avatar lg">
        </div>
    </div>
</header>

<div class="mobile-search-bar" d-attr="class.open: mobileSearchOpen">
    <div class="mobile-search-header">
        <form class="search-bar" action="/showcase/kanban/search" d-pulse="commit" d-target="#mobile-search-results">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" placeholder="Search tasks..." class="search-input" id="mobile-search-input"
                d-input="/showcase/kanban/search" d-pulse="commit" d-debounce="300" name="q"
                d-target="#mobile-search-results" d-min-length="1" autocomplete="off">
        </form>
        <button class="close-search" d-signal="click: mobileSearchOpen = false; click: Kanban.clearSearch">Ã—</button>
    </div>
    <div id="mobile-search-results"></div>
</div>

<script>
    if (window.Surf) {
        Surf.register('Kanban', {
            clearSearch() {
                const mobileInput = document.getElementById('mobile-search-input');
                if (mobileInput) mobileInput.value = '';

                const mobileResults = document.getElementById('mobile-search-results');
                if (mobileResults) mobileResults.innerHTML = '';

                const desktopResults = document.getElementById('search-results');
                if (desktopResults) desktopResults.innerHTML = '';

                return {};
            }
        });
    }
</script>

