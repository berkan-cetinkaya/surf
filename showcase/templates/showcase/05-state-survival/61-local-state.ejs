<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seat Booking - SURF Example</title>
    <style>
        :root {
            --glass-bg: rgba(30, 41, 59, 0.4);
            --glass-border: rgba(255, 255, 255, 0.08);
            --accent-primary: #38bdf8;
            --accent-secondary: #818cf8;
            --text-main: #f8fafc;
            --text-dim: #94a3b8;
            --danger: #f43f5e;
            --success: #10b981;
            --warning: #f59e0b;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: radial-gradient(circle at top right, #1e1b4b, #0f172a);
            background-attachment: fixed;
            min-height: 100vh;
            color: var(--text-main);
            padding: 4rem 1.5rem;
        }

        .container {
            max-width: 550px;
            margin: 0 auto;
        }

        h1 {
            font-size: clamp(1.5rem, 4vw, 2.2rem);
            font-weight: 800;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, #fff 0%, var(--accent-primary) 100%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: -0.04em;
            text-align: center;
        }

        .subtitle {
            color: var(--text-dim);
            margin-bottom: 2.5rem;
            font-size: 1rem;
            text-align: center;
            font-weight: 500;
        }

        .explanation {
            background: rgba(56, 189, 248, 0.05);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            padding: 1.5rem;
            margin-bottom: 2.5rem;
            font-size: 0.95rem;
            color: var(--text-dim);
            line-height: 1.6;
        }

        .explanation strong {
            color: var(--accent-primary);
        }

        .card {
            background: var(--glass-bg);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid var(--glass-border);
            border-radius: 32px;
            padding: 2rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        }

        .event-header {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .event-icon {
            width: 72px;
            height: 72px;
            background: rgba(129, 140, 248, 0.1);
            border: 1px solid rgba(129, 140, 248, 0.2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .event-info h2 {
            font-size: 1.4rem;
            font-weight: 800;
            color: var(--text-main);
            margin-bottom: 0.4rem;
            letter-spacing: -0.02em;
        }

        .event-info p {
            font-size: 0.9rem;
            color: var(--text-dim);
            font-weight: 500;
        }

        .availability {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            margin-bottom: 0.5rem;
        }

        .availability-label {
            color: var(--text-dim);
            font-size: 0.75rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-bottom: 0.5rem;
        }

        .availability-count {
            font-size: 1.75rem;
            font-weight: 900;
            color: var(--text-main);
        }

        .availability-count.high {
            color: var(--success);
        }

        .availability-count.medium {
            color: var(--warning);
        }

        .availability-count.low {
            color: var(--danger);
        }

        .update-indicator {
            font-size: 0.7rem;
            color: var(--text-dim);
            text-align: right;
            font-weight: 600;
            padding: 0.5rem;
        }

        /* Selector Card */
        .selector-card {
            text-align: center;
            border-top: 4px solid var(--accent-primary);
        }

        .selector-label {
            color: var(--text-dim);
            font-size: 0.9rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            margin-bottom: 2rem;
        }

        .seat-counter {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 2.5rem;
            margin-bottom: 2rem;
        }

        .counter-btn {
            width: 60px;
            height: 60px;
            border-radius: 20px;
            border: 1px solid var(--glass-border);
            background: rgba(255, 255, 255, 0.05);
            color: var(--text-main);
            font-size: 1.5rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .counter-btn:hover:not(:disabled) {
            background: rgba(255, 255, 255, 0.1);
            border-color: var(--accent-primary);
            color: var(--accent-primary);
            transform: translateY(-2px);
        }

        .counter-btn:disabled {
            opacity: 0.2;
            cursor: not-allowed;
        }

        .counter-value {
            font-size: 4rem;
            font-weight: 900;
            color: var(--text-main);
            min-width: 100px;
            letter-spacing: -0.05em;
        }

        .total-price {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 2rem;
            color: var(--text-dim);
        }

        .total-price span {
            color: var(--accent-primary);
            font-weight: 900;
        }

        .book-btn {
            width: 100%;
            padding: 1.25rem;
            background: linear-gradient(135deg, var(--accent-secondary), var(--accent-primary));
            color: #0f172a;
            border: none;
            border-radius: 20px;
            font-size: 1.1rem;
            font-weight: 800;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
            box-shadow: 0 10px 20px -5px rgba(56, 189, 248, 0.4);
        }

        .book-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            filter: brightness(1.1);
            box-shadow: 0 15px 30px -10px rgba(56, 189, 248, 0.6);
        }

        .book-btn:disabled {
            opacity: 0.4;
            cursor: not-allowed;
            filter: grayscale(1);
        }

        .state-display {
            margin-top: 2rem;
            padding: 1.5rem;
            background: rgba(0, 0, 0, 0.4);
            border-radius: 24px;
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.8rem;
            text-align: left;
            border: 1px solid var(--glass-border);
        }

        .state-display .label {
            color: var(--text-dim);
            margin-bottom: 0.75rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .state-display .local {
            color: var(--success);
            font-weight: 700;
        }

        .state-display .server {
            color: var(--accent-primary);
            font-weight: 700;
        }

        .back {
            position: fixed;
            top: 2rem;
            left: 2rem;
            color: var(--text-dim);
            text-decoration: none;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
            z-index: 10;
        }

        .back:hover {
            color: var(--accent-primary);
            transform: translateX(-5px);
        }

        .success-overlay {
            color: var(--success);
            font-weight: 700;
            font-size: 1.25rem;
            margin-top: 1.5rem;
        }
    </style>
    <%- include('../../partials/core-scripts') %>
</head>

<body>
    <a href="/showcase/05-state-survival" class="back" d-pulse="navigate">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"
            stroke-linecap="round" stroke-linejoin="round">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back
    </a>

    <div class="container">
        <h1>Echo Protocol</h1>
        <p class="subtitle">Distributed State Synchronization</p>

        <div class="explanation">
            <strong>ðŸ”‘ The "Mixed State" Pattern:</strong>
            <br>
            Your seat selection is <strong>Local Cell State</strong>, while availability is <strong>Server
                State</strong>. Watch how your local choice survives even as the server surface refreshes every 3
            seconds.
        </div>

        <!-- Event Info Card -->
        <div class="card">
            <div class="event-header">
                <div class="event-icon">ðŸŽ¸</div>
                <div class="event-info">
                    <h2>SURF Live 2026</h2>
                    <p>Grand Arena â€¢ 20:00 â€¢ Standard Seating</p>
                </div>
            </div>

            <!-- Server-updated availability -->
            <div id="availability-surface" d-auto-refresh="3000" d-auto-refresh-url="/api/seats">
                <div class="availability">
                    <div>
                        <div class="availability-label">Available</div>
                        <div class="availability-count high" id="seat-count">--</div>
                    </div>
                    <div style="text-align: right;">
                        <div class="availability-label">Pricing</div>
                        <div style="color: #fff; font-size: 1.5rem; font-weight: 800;">$75</div>
                    </div>
                </div>
                <div class="update-indicator">Syncing...</div>
            </div>
        </div>

        <!-- User Selection Card -->
        <div class="card selector-card" d-cell="{count: 1}" d-id="booking">
            <%- include('../../partials/seat_selector') %>
        </div>
    </div>

    <script>
        // Sync debug panel with auto-refreshed availability surface
        function syncDebugAvailable() {
            const seatCount = document.getElementById('seat-count');
            const debugAvailable = document.getElementById('debug-available');
            if (seatCount && debugAvailable) {
                debugAvailable.textContent = seatCount.textContent.trim();
            }
        }

        // Observe availability surface changes
        document.addEventListener('DOMContentLoaded', () => {
            const surface = document.getElementById('availability-surface');
            if (surface) {
                const observer = new MutationObserver(syncDebugAvailable);
                observer.observe(surface, { childList: true, subtree: true, characterData: true });
                syncDebugAvailable();
            }
        });
    </script>

</body>

</html>