<script src="/dist/surf.min.js"></script>
<script src="/dist/plugins/top-loader.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        if (window.Surf) {
            if (window.SurfTopLoader) {
                Surf.use(SurfTopLoader, {
                    color: 'linear-gradient(90deg, #3b82f6, #60a5fa)',
                    height: '3px'
                });
            }
        }
    });
</script>
<script src="/dist/plugins/drag-and-drop.js"></script>
<script src="/dist/plugins/debounce.js"></script>
<script>
    // Initialize plugins
    if (window.Surf) {
        if (window.SurfDragAndDrop) window.Surf.use(window.SurfDragAndDrop);
        if (window.SurfDebounce) window.Surf.use(window.SurfDebounce);
    }
</script>