<% if (tasks && tasks.length> 0) { %>
    <% tasks.forEach(task=> { %>
        <tr class="backlog-row" d-draggable="true"
            d-drag-data='{"taskId": "<%= task.id %>", "fromCol": "backlog", "fromSprintId": "<%= typeof sprintId !== "undefined" ? sprintId : "" %>"}'
            d-cell="{ expanded: false }" d-id="task-<%= task.id %>">

            <td class="col-priority">
                <% if (task.urgent) { %>
                    <span class="priority-indicator critical">!</span>
                    <% } else { %>
                        <span class="priority-dot <%= task.priority %>"></span>
                        <% } %>
            </td>

            <td class="col-title" d-signal="click: expanded = !expanded" d-no-drag>
                <div class="task-title">
                    <%= task.title %>
                </div>
                <div class="task-meta">
                    <span class="type-badge <%= task.type %>">
                        <%= task.type %>
                    </span>
                    <% if (typeof task.columnId !=='undefined' && task.columnId !=='backlog' ) { %>
                        <span class="status-badge <%= task.columnId %>"
                            style="text-transform: capitalize; background: rgba(255,255,255,0.1); padding: 2px 6px; border-radius: 4px; font-size: 0.75rem; margin-left: 4px;">
                            <%= task.columnId %>
                        </span>
                        <% } %>
                            <% (task.tags || []).forEach(tag=> { %>
                                <span class="tag">#<%= tag %></span>
                                <% }); %>
                </div>

                <!-- Expanded Quick Actions -->
                <div class="quick-actions" d-show="expanded" style="display: none;">
                    <form d-pulse="commit" method="POST" action="/examples/kanban/delete" style="display: inline;">
                        <input type="hidden" name="taskId" value="<%= task.id %>">
                        <input type="hidden" name="columnId" value="backlog">
                        <% if (typeof sprintId !=="undefined" && sprintId) { %>
                            <input type="hidden" name="sprintId" value="<%= sprintId %>">
                            <% } %>
                                <button type="submit" class="btn-delete-task" title="Delete Task">
                                    <span class="icon">Ã—</span> Delete
                                </button>
                    </form>
                </div>
            </td>

            <td class="col-assignee">
                <% if (task.assignee_avatar) { %>
                    <img src="<%= task.assignee_avatar %>" class="assignee-avatar small">
                    <% } else { %>
                        <span class="avatar-placeholder">?</span>
                        <% } %>
            </td>

            <td class="col-date">
                <%= new Date(task.created_at).toLocaleDateString() %>
            </td>
        </tr>
        <% }); %>
            <% } else { %>
                <tr class="empty-backlog-row">
                    <td colspan="4">
                        <div class="empty-state">No tasks here</div>
                    </td>
                </tr>
                <% } %>