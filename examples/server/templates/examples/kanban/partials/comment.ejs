<div class="comment-item" id="comment-<%= comment.id %>">
    <div class="comment-header">
        <div class="comment-author">
            <% if (comment.author_avatar) { %>
                <img src="<%= comment.author_avatar %>" class="user-avatar" style="width: 24px; height: 24px;">
                <% } else { %>
                    <div class="user-avatar" style="width: 24px; height: 24px; background: #666; font-size: 12px;">?
                    </div>
                    <% } %>
                        <span class="author-name">
                            <%= comment.author_name || 'User' %>
                        </span>
                        <span class="comment-date">
                            <%= new Date(comment.created_at).toLocaleString() %>
                        </span>
        </div>
        <button class="delete-btn icon-only" d-pulse="action"
            d-action="/examples/kanban/comments/<%= comment.id %>/delete" d-target="#comment-<%= comment.id %>"
            title="Delete comment">
            Ã—
        </button>
    </div>
    <div class="comment-body">
        <%= comment.content %>
    </div>
</div>