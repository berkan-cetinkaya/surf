<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        <%= title %> - SURF Examples
    </title>
    <%- include('../partials/head') %>
</head>

<body>
    <div class="app-layout">
        <%- include('../partials/header', { breadcrumbs: [{ label: 'Examples' , href: '/examples' }, { label: title }]
            }) %>

            <%- include('../partials/sidebar', { activeCategory: activeCategory, activeExample: null }) %>

                <main class="app-main">
                    <h2 style="font-size: 1.4rem; margin-bottom: 0.3rem; color: var(--accent-cyan);">
                        <%= title %>
                    </h2>
                    <p style="color: var(--text-secondary); margin-bottom: 1.5rem; font-size: 0.9rem;">
                        <%= examples.length %> example<%= examples.length !==1 ? 's' : '' %> in this category
                    </p>

                    <% if (examples.length===0) { %>
                        <div class="empty-state">
                            <p>ðŸš§ Examples coming soon...</p>
                            <p>This category is under development.</p>
                        </div>
                        <% } else { %>
                            <div class="example-list">
                                <% examples.forEach(example=> { %>
                                    <a href="/examples/<%= activeCategory %>/<%= example.id %>"
                                        class="example-item-link">
                                        <div class="example-item">
                                            <div class="example-item-number">
                                                <%= example.id.split('-')[0] %>
                                            </div>
                                            <div>
                                                <div class="example-item-title">
                                                    <%= example.title %>
                                                </div>
                                                <code class="example-item-id"><%= example.id %></code>
                                            </div>
                                        </div>
                                    </a>
                                    <% }) %>
                            </div>
                            <% } %>
                </main>
    </div>

    <%- include('../partials/core-scripts') %>
</body>

</html>